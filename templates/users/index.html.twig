{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}


{% block stylesheets %}
            
            {#<link rel="stylesheet" href="{{asset('assets/css/bootstrap.css')}}">#}
            <link rel="stylesheet" href="{{asset('../assets/css/style.css')}}">
            
        {% endblock %}


{% block body %}
    <h1>Users index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>LastName</th>
                <th>Email</th>
                <th>Password</th>
                <th>Rol</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.rol }}</td>
                <td>{{ user.image }}</td>
                <td>
                    <a href="{{ path('app_users_show', {'id': user.id}) }}" class = "btn btn-primary">show</a>
                    <a href="{{ path('app_users_edit', {'id': user.id}) }}" class = "button button-gestion">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_users_new') }}" class = "btn btn-primary">Create new</a>
{% endblock %}
